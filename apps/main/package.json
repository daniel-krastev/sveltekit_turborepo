{
	"name": "main",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "vite build",
		"dev": "vite dev",
		"clean": "rm -rf .svelte-kit node_modules vite.config.ts.*",
		"preview": "vite preview",
		"test": "run-s test:unit test:integration",
		"test:unit": "vitest run",
		"test:integration": "playwright test",
		"test:unit:watch": "vitest",
		"lint": "prettier --config ../../.prettierrc --ignore-path ../../.prettierignore --check --plugin prettier-plugin-svelte --plugin prettier-plugin-tailwindcss . && eslint . --max-warnings=0",
		"sorted": "pnpx sort-package-json -c",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --config ../../.prettierrc --ignore-path ../../.prettierignore --write --plugin prettier-plugin-svelte --plugin prettier-plugin-tailwindcss . && pnpx sort-package-json",
		"sort": "pnpx sort-package-json",
		"prepare": "svelte-kit sync"
	},
	"dependencies": {
		"@skeletonlabs/skeleton": "^2.1.0",
		"@skeletonlabs/tw-plugin": "^0.2.0",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/kit": "^1.25.0",
		"@tailwindcss/forms": "^0.5.6",
		"@tailwindcss/typography": "^0.5.10",
		"@types/node": "^20.6.1",
		"autoprefixer": "^10.4.15",
		"components": "workspace:*",
		"libs": "workspace:*",
		"postcss": "^8.4.29",
		"svelte": "^4.2.0",
		"tailwindcss": "^3.3.5",
		"tsconfig": "workspace:*",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"vite": "^4.4.9"
	},
	"devDependencies": {
		"@playwright/test": "^1.37.1",
		"chai": "^4.3.8",
		"eslint-config-custom": "workspace:*",
		"highlight.js": "^11.8.0",
		"local-pkg": "^0.4.3",
		"npm-run-all": "^4.1.5",
		"source-map": "^0.7.4",
		"svelte-check": "^3.5.1",
		"tinyspy": "^2.1.1",
		"vite-tsconfig-paths": "^4.2.1",
		"vitest": "^0.25.8"
	}
}
